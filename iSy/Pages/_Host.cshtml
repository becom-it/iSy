@page "/"
@namespace iSy.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>iSy</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="_content/iSy.Controls/isy-controls.css" rel="stylesheet" />
    <link href="_content/EmployeeInfo/employee-info.css" rel="stylesheet" />
    <link href="_content/iSy.Wordpress/wordpress.css" rel="stylesheet" />
    @*<link href="_content/TimeRecordings/TimeRecordings.bundle.scp.css" rel="stylesheet" />
    <link href="_content/iSy.Controls/iSy.Controls.bundle.scp.css" rel="stylesheet" />*@
    <link href="iSy.styles.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="Server" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script type="module" src="_content/EmployeeInfo/canvasOrgChart.js"></script>
    <script type="module" src="~/js/login.js"></script>
    @Html.AntiForgeryToken()
</body>
</html>
